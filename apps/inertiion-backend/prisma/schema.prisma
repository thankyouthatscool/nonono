// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model CatalogItem {
  itemId       String    @id @default(uuid())
  code         String
  color        String?
  size         String?
  description  String?
  location     String
  dateCreated  DateTime  @default(now())
  dateModified DateTime  @default(now())
  Storage      Storage[]
}

model Storage {
  storageId       String      @id @default(uuid())
  storageLocation String
  item            CatalogItem @relation(fields: [itemId], references: [itemId])
  itemId          String
  cartons         Int
  pieces          Int
  dateCreated     DateTime    @default(now())
  dateModified    DateTime    @default(now())
}
